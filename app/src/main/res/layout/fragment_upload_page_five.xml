<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.fragments.UploadPageFiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/upload_p5_title"
            android:layout_width="283dp"
            android:layout_height="65dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/upload_pg5_recipe_image_title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline42"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/upload_next_button_p5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/food_red"
            android:text="@string/upload_next_button"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/upload_cancel_button_p5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/upload_cancel_button_p5"
            app:layout_constraintTop_toTopOf="@+id/upload_cancel_button_p5" />

        <Button
            android:id="@+id/upload_cancel_button_p5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/light_grey_background"
            android:text="@string/upload_cancel_button"
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/upload_next_button_p5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline39" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="575dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="40dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="100dp" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/upload_recipe_camera_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:src="@drawable/ic_round_camera_alt_36"
            android:tint="@color/food_red"
            app:contentPadding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/upload_recipe_folder_button"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toTopOf="@+id/guideline42"
            app:shapeAppearanceOverlay="@style/circleShape" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/upload_recipe_folder_button"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/white"
            android:elevation="5dp"
            android:src="@drawable/ic_round_folder_36"
            android:tint="@color/food_brown"
            app:contentPadding="20dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline39"
            app:layout_constraintEnd_toStartOf="@+id/guideline41"
            app:layout_constraintStart_toStartOf="@+id/guideline40"
            app:layout_constraintTop_toBottomOf="@+id/upload_recipe_camera_button"
            app:shapeAppearanceOverlay="@style/circleShape" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>